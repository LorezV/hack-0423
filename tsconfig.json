{
  "extends": "./tsconfig.rule.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./build",
    "paths": {
      "@prisma": ["src/prisma/index"],
      "@config": ["src/config/index"],
      "@logger": ["src/logger/index"]
    }
  },
  "include": ["src/**/*.ts"]
}
