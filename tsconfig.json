{
  "extends": "./tsconfig.rule.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./build",
    "paths": {
      "@services": ["src/services/index"],
      "@interfaces": ["src/interfaces/index"],
      "@utils": ["src/utils/index"]
    }
  },
  "include": ["src/**/*.ts"]
}
